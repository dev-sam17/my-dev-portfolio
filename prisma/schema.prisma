generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  technologies  String[]
  images        String[]
  demoUrl       String?
  githubUrl     String?
}

model FreelanceProject {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  clientName    String
  projectName   String
  description   String
  technologies  String[]
  timeline      String
  projectUrl    String?
  githubUrl     String?
}